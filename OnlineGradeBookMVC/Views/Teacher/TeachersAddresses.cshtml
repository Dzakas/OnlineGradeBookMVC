@model OGB.Application.ViewModels.Teachers.ListTeacherAddressForListVm

@{
    ViewData["Title"] = "TeachersAddresses";
}

<h1>TeachersAddresses</h1>
<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="Index">Back to previous page</a>
</p>

<table class="table">
    <style>
        table {
            text-align: center;
        }

        th {
            border: 1px solid;
            padding: 10px;
        }

        td {
            border: 1px solid;
            padding: 10px;
        }
    </style>
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Street
            </th>
            <th>
                Home Number
            </th>
            <th>
                City
            </th>
            <th>
                ZipCode
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TeacherAddresses)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
        </tr>
}
    </tbody>
</table>
