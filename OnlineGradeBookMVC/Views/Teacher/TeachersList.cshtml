@model OGB.Application.ViewModels.Teachers.ListTeacherForListVm

@{
    ViewData["Title"] = "TeachersList";
}

<h1>Teachers</h1>
<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="Index">Back to previous page</a>
</p>

<table class="table">
    <style>
        table {
            text-align: center;
        }

        th {
            border: 1px solid;
            padding: 10px;
        }

        td {
            border: 1px solid;
            padding: 10px;
        }
    </style>
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Category
            </th>
            <th>
                Years of teaching
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model._Teachers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsOfTeaching)
            </td>
        </tr>
}
    </tbody>
</table>
