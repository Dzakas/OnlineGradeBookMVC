@model OGB.Application.ViewModels.Class1B.VmForDisplay.ListStudentsContactInfo1BForListVm

@{
    ViewData["Title"] = "StudentsContactInformation";
}

<h1>StudentsContactInformation</h1>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Class1B" asp-action="Index">Back to previous page</a>
</p>
<table class="table">
    <style>
        table {
            text-align: center;
        }

        th {
            border: 1px solid;
            padding: 10px;
        }

        td {
            border: 1px solid;
            padding: 10px;
        }

    </style>
    <thead>
