@model OGB.Application.ViewModels.Class1B.VmForDisplay.ListStudentForList1BVm

@{
    ViewData["Title"] = "Index";
}

<h1>Class 1B</h1>
<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Class1Split">Back to previous page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a class="nav-link text-dark" asp-area="" asp-controller="Class1B" asp-action="StudentsAvarages">Grade averages</a>
            </th>
            <th>
                <a class="nav-link text-dark" asp-area="" asp-controller="Class1B" asp-action="StudentsContactInformation">Contact information of students</a>
            </th>
        </tr>
    </thead>
</table>

<table class="table">
    <style>
        table {
            text-align: center;
        }

        th {
            border: 1px solid;
            padding: 10px;
        }

        td {
            border: 1px solid;
            padding: 10px;
        }
    </style>
    <thead>
        <tr>
            <th>
                Index number
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Avarage
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students1B) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avarage)
            </td>
        </tr>
}
    </tbody>
</table>

